<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    tools:context=".Menu_Activity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="10dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#fff"
        android:text="Inventario Gasimon"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_margin="20dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/illustration"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@drawable/bg_menu">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="30dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"

                            android:background="@drawable/bg_btn_menu"
                            android:layout_width="match_parent"
                            android:layout_height="200dp">
                            <ImageView
                                android:src="@drawable/pluspro"
                                android:layout_width="wrap_content"
                                android:layout_height="120dp"/>
                            <Button
                                android:id="@+id/btn_agregar"
                                android:layout_gravity="top|center"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="agregar"
                                android:textSize="13dp"
                                android:background="@drawable/boton"/>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#3438db">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/bg_btn_menu"
                            android:layout_width="match_parent"
                            android:layout_height="200dp">
                            <ImageView
                                android:src="@drawable/pluspro"
                                android:layout_width="wrap_content"
                                android:layout_height="120dp"/>
                            <Button
                                android:id="@+id/btn_inventario"
                                android:layout_gravity="top|center"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Inventario"
                                android:textSize="13dp"
                                android:background="@drawable/boton"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/bg_btn_menu"
                            android:layout_width="match_parent"
                            android:layout_height="200dp">
                            <ImageView
                                android:src="@drawable/pluspro"
                                android:layout_width="wrap_content"
                                android:layout_height="120dp"/>
                            <Button
                                android:id="@+id/btn_usuarios"
                                android:layout_gravity="top|center"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="usuarios"
                                android:textSize="13dp"
                                android:background="@drawable/boton"/>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#3438db">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/bg_btn_menu"
                            android:layout_width="match_parent"
                            android:layout_height="200dp">
                            <ImageView
                                android:src="@drawable/pluspro"
                                android:layout_width="wrap_content"
                                android:layout_height="120dp"/>
                            <Button
                                android:id="@+id/btn_info"
                                android:layout_gravity="top|center"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="info"
                                android:textSize="13dp"
                                android:background="@drawable/boton"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>


</ScrollView>